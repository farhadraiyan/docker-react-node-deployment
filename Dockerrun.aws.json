{
    "AWSEBDockerrunVersion": 2,
    "containerDefinations": [
        {
            "name": "react-client",
            "image": "farhad1987/testdeploy-client",
            "host": "react-client",
            "essential": false,
            "memory": 128
        },
        {
            "name": "node-server",
            "image": "farhad1987/testdeploy-server",
            "host": "app",
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "farhad1987/testdeploy-nginx",
            "host": "nginx",
            "essential": true,
            "portMapping":[
                {
                    "hostPort": 80,
                    "containerPort":80
                }
            ], 
            "links": ["react-client", "node-server"],
            "memory": 128

        }

    ]
}